<a class="breadcrumb" href="/books/">&larr; All Books</a>
<h1>{{ title }}</h1>
<h2 class="subtitle">Books Read: <span id="count-up">{{ books2023 | length }}</span></h2>

<div class="flow">
	<div class="books-list flow">
		{% set ratings = [5, 4.5, 4, 3.5, 3, 2.5, 2, 1.5, 1] %}
		{% for rating in ratings %}
			{% set hasBooks = false %}
			{% for book in books2023 %}
				{% if book.rating == rating %}
					{% set hasBooks = true %}
				{% endif %}
			{% endfor %}

			{% if hasBooks %}
				<h2>
					<span class="rating">
						<svg width="20" height="19" viewBox="0 0 20 19" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M3.825 19L5.45 11.975L0 7.25L7.2 6.625L10 0L12.8 6.625L20 7.25L14.55 11.975L16.175 19L10 15.275L3.825 19Z"/></svg> {{ rating }}
					</span>
				</h2>
				<ul class="books favorites">
				{% for book in books2023 %}
					{% if book.rating == rating %}
						<li class="book">
							{% if book.cover %}
								<img src="{{ book.cover }}" loading="lazy" alt="Cover art of {{ book.title }}">
							{% endif %}
							<p class="title">{{ book.title }}</p>
							<p><em>by <span class="author">{{ book.author }}</span></em></p>
						</li>
					{% endif %}
				{% endfor %}
				</ul>
			{% endif %}
		{% endfor %}
	</div>
</div>
<script>
	const countUpElement = document.getElementById('count-up');
	const targetCount = {{ books2023 | length }};
	const duration = 1000; // 1.25 seconds
	const incrementTime = 30; // Update every 30ms
	const steps = duration / incrementTime;
	const increment = targetCount / steps;

	let currentCount = 0;

	const timer = setInterval(() => {
		currentCount += increment;
		if (currentCount >= targetCount) {
			currentCount = targetCount;
			clearInterval(timer);
		}
		countUpElement.textContent = Math.floor(currentCount);
	}, incrementTime);
</script>
